<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/item_space_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/appIconImageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="0"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/installedAppItemAppNameText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/item_space_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/itemInstalledAppsMemTrimFlagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/border"
                    android:paddingHorizontal="@dimen/padding_horizontal_if_use_border"
                    android:paddingVertical="@dimen/padding_vertical_if_use_border"
                    android:text="@string/itemInstalledAppsMemTrimFlagText"
                    android:textColor="@color/shanChui" />

                <TextView
                    android:id="@+id/itemInstalledAppsCustomMainProcOomScoreFlagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/border"
                    android:paddingHorizontal="@dimen/padding_horizontal_if_use_border"
                    android:paddingVertical="@dimen/padding_vertical_if_use_border"
                    android:text="@string/itemInstalledAppsCustomMainProcOomScoreFlagText"
                    android:textColor="@color/shanChui" />

                <TextView
                    android:id="@+id/itemInstalledAppsOomPolicyFlagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/border"
                    android:paddingHorizontal="@dimen/padding_horizontal_if_use_border"
                    android:paddingVertical="@dimen/padding_vertical_if_use_border"
                    android:text="@string/itemInstalledAppsOomPolicyFlagText"
                    android:textColor="@color/shanChui" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>