<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppTheme.Dynamic" parent="Theme.Material3.DynamicColors.DayNight">
        <!--屏蔽默认状态栏-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--状态栏背景色-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!--导航栏?-->
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

        <item name="switchPreferenceStyle">@style/SwitchStyle</item>
        <item name="alertDialogTheme">@style/DialogStyleM3</item>
        <item name="dialogTheme">@style/DialogStyleM3</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Material</item>
        <item name="alertDialogStyle">@style/DialogStyleM3</item>
        <!--对preference有效果的-->
        <item name="dialogCornerRadius" tools:ignore="PrivateResource">@dimen/mtrl_alert_dialog_background_inset_start</item>
    </style>
</resources>