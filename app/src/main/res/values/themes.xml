<resources>
    <!-- Base application theme. -->
    <style name="Theme.BackgroundOpt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/duRuo</item>
        <item name="colorPrimaryVariant">@color/ganJieGeng</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

        <item name="switchStyle">@style/SwitchStyle</item>
    </style>

    <!--溢出[弹出]菜单样式-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/white</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">8dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
<!--        <item name="thumbTint">#ECECEC</item>-->
<!--        <item name="trackTint">#BDBABC</item>-->
    </style>

    <!-- toolbar的菜单栏三个点点的颜色 -->
    <style name="ToolbarMenu" parent="Theme.AppTheme">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--自动换行的水平布局-->
    <style name="LineFeedLayoutDefault">
        <item name="horizontalSpacing">@dimen/item_space</item>
        <item name="verticalSpacing">@dimen/item_space</item>
    </style>
</resources>